{
    "version": 2,
    "shared": {
        "notification_email": "touchdown@yahoo-inc.com",
        "notify_developers" : true,
        "build_container": "node10",
        "test_results_type": "xunit"
    },
    "jobs": {
        "component": {
            "build": {
                "lint": {
                    "threshold": 0
                },
                "test": {
                    "task": "script",
                    "command": "node ./node_modules/.bin/grunt cover --coverage_dir ${COVERAGE_DIR} --test_results_dir ${TEST_RESULTS_DIR}",
                    "line_coverage_threshold": 80,
                    "before": {
                        "task": "script",
                        "command": "node ./node_modules/.bin/grunt test"
                    },
                    "after": [
                        {
                            "task": "script",
                            "command": "node ./node_modules/.bin/grunt functional",
                            "ignore_errors": false
                        }
                    ]
                },
                "publish": {
                    "tag": true
                }
            }
        }
    }
}
